{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            {{ category.name }}
        </div>
        <div class="col-md-7">
            {% for post in category.posts %}
                {% include 'post/posts.html.twig' with {"post": post} %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
