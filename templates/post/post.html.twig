{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            {{ post.category.name }}
        </div>
        <div class="col-md-7">
            <h2>
                {{ post.title }}
            </h2>
            <div class="post-description">
                {{ post.shortDescription }}
            </div>
            <div class="post-content">
                {{ post.content }}
            </div>
        </div>
    </div>
{% endblock %}
