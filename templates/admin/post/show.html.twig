{% extends 'admin/base.html.twig' %}

{% block title %}Post updating...{% endblock %}

{% block body %}
    <form id="remove-post-form" action="{{ path(admin_prefix ~ 'delete_post', {id: post.id}) }}" method="post"></form>
    <form action="{{ path(admin_prefix ~ 'update_post', {id: post.id}) }}" method="post">
        <div class="row">
            <div class="col-md-1">
                <label for="category-id">Category:</label>
            </div>
            <div class="col-md-3">
                <select id="category-id" name="category-id">
                    <option value="{{ post.category.id }}">{{ post.category.name }}</option>
                    {% for category in categories %}
                        {% if category.id is not same as (post.category.id) %}
                            <option value="{{ category.id }}">{{ category.name }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-1">
                <label for="title">Title: </label>
            </div>
            <div class="col-md-3">
                <input type="text" id="title" placeholder="Title" name="title" value="{{ post.title }}">
            </div>
            <div class="col-md-1">
                <label for="short-description">Short description: </label>
            </div>
            <div class="col-md-3">
                <textarea id="short-description" placeholder="Short description" name="short-description">{{ post.shortDescription }}</textarea>
            </div>
            <div class="col-md-1">
                <label for="content">Content: </label>
            </div>
            <div class="col-md-10">
                <textarea class="width-100" rows="20" id="content" placeholder="Content" name="content">{{ post.content }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1 col-md-offset-11">
                <button type="submit" class="btn">Save</button>
                <button form="remove-post-form" type="submit" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </form>
{% endblock %}