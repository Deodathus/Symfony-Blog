{% extends 'base.html.twig' %}

{% block title %}Welcome to the DDECS BLOG!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            <ul>
                {% for category in categories %}
                    <li><a href="{{ path('category', {slug: category.slug}) }}">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-7">
            {% for post in posts %}
                {% include 'post/posts.html.twig' with {"post": post} %}
            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(posts) }}
            </div>
        </div>

    </div>
{% endblock %}
